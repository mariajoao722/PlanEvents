<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/img1"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/black"/>

        <TextView
            android:id="@+id/nametext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Nome da Paragem"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pontostext"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nametext"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Pontos"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/localizacaotext"
            android:layout_width="203dp"
            android:layout_height="30dp"
            android:layout_below="@+id/nametext"
            android:layout_toRightOf="@+id/pontostext"
            android:text="Localização"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/penalizacaotext"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pontostext"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Penalização"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/obrigatoriotext"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pontostext"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/penalizacaotext"
            android:text="Obrigat"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/descricaotext"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/penalizacaotext"
            android:layout_marginTop="20dp"
            android:text="Descrição"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_below="@+id/descricaotext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:textAllCaps="false"
                android:id="@+id/btnEditar"
                android:layout_marginRight="5dp"
                />

            <Button
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:textAllCaps="false"
                android:id="@+id/btnDelete"
                android:layout_marginLeft="5dp"
                />

            <Button
                android:id="@+id/btnDetalhes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Ver Detalhes"
                android:textAllCaps="false" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>