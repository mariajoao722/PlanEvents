<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "#3758A4"
    tools:context=".MenuUser">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/consultarEv"
        android:layout_width="207dp"
        android:layout_height="60dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="162dp"
        android:background="@drawable/shape_button"
        android:padding="10dp"
        android:textColor="@color/black"
        android:shadowColor="@android:color/transparent"
        android:text="Consultar Eventos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/aderirEv"
        android:layout_width="207dp"
        android:layout_height="60dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="165dp"
        android:textColor="@color/black"
        android:background="@drawable/shape_button"
        android:padding="10dp"
        android:shadowColor="@android:color/transparent"
        android:text="Aderir a um Evento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/consultarEv" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/perfil"
        android:layout_width="207dp"
        android:layout_height="60dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="165dp"
        android:background="@drawable/shape_button"
        android:padding="10dp"
        android:shadowColor="@android:color/transparent"
        android:text="Perfil"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aderirEv" />
</androidx.constraintlayout.widget.ConstraintLayout>