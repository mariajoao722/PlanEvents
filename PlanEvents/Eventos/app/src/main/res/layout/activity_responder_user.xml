<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResponderUser">


    <ImageView
        android:id="@+id/profileImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/profileImg"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="@id/profileImg"
        app:layout_constraintTop_toBottomOf="@id/profileImg" />


    <TextView
        android:id="@+id/Descricaotxt"
        android:layout_width="373dp"
        android:layout_height="90dp"
        android:layout_marginTop="100dp"
        android:text="Descrição"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="left"
        app:layout_constraintEnd_toEndOf="@id/titleName"
        app:layout_constraintStart_toStartOf="@id/titleName"
        app:layout_constraintTop_toBottomOf="@id/titleName" />

    <TextView
        android:id="@+id/Tarefatxt"
        android:layout_width="373dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:text="Tarefa"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="left"
        app:layout_constraintEnd_toEndOf="@id/Descricaotxt"
        app:layout_constraintStart_toStartOf="@id/Descricaotxt"
        app:layout_constraintTop_toBottomOf="@id/Descricaotxt" />

    <EditText
        android:id="@+id/Respostatxt"
        android:layout_width="373dp"
        android:layout_height="48dp"
        android:hint="Insira a resposta"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@id/Tarefatxt"
        app:layout_constraintStart_toStartOf="@id/Tarefatxt"
        app:layout_constraintTop_toBottomOf="@id/Tarefatxt" />


    <Button
        android:id="@+id/btnSubmeter"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:text="Submeter"
        app:layout_constraintEnd_toEndOf="@id/Respostatxt"
        app:layout_constraintStart_toStartOf="@id/Respostatxt"
        app:layout_constraintTop_toBottomOf="@id/Respostatxt"
        />

</androidx.constraintlayout.widget.ConstraintLayout>